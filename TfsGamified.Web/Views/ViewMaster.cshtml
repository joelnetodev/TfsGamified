<!DOCTYPE html>
<html class="nav-open">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>TfsGamified - @ViewBag.Title</title>

    <link href="@Url.Content("~/Content/Styles/animate.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Styles/bootstrap.min.css")" rel="stylesheet" type="text/css"/>
    <link href="@Url.Content("~/Content/Styles/dashboard.css")" rel="stylesheet" type="text/css"/>
    <link href="@Url.Content("~/Content/Styles/custom.css")" rel="stylesheet" type="text/css"/>

    <script src="@Url.Content("~/Content/Scripts/bootstrap.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/Scripts/jquery.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/Scripts/dashboard.js")" type="text/javascript"></script>
    
    @RenderSection("HeadContent", false)

</head>
<body>


<div class="wrapper">

    <!--Menu Barra Lateral esquerda aberta -->
    <div class="sidebar" data-background-color="white" data-active-color="danger">
        <div class="sidebar-wrapper">
            <div class="logo">            
                <a href="#" class="simple-text">
                    <img src="~/Content/Imagens/logo.png" class="custom-logo-ico">TFS-Gamified
                </a>              
            </div>

            <ul class="nav">
                <li>
                    <a href="@Url.Action("Projeto", "Jogo")">
                        @if (Session["NomeProjeto"] == null)
                        {
                            <p><img src="~/Content/Imagens/engrenagem.png" class="custom-nav-ico">&nbsp&nbspProjeto</p>
                        }
                        else
                        {
                            <p><img src="~/Content/Imagens/engrenagem.png" class="custom-nav-ico">&nbsp&nbsp @Session["NomeProjeto"]</p>
                        }
                    </a>
                </li>
                <li id="navprogresso">
                    <a href="@Url.Action("Progresso", "Jogo", new { nomeProjeto = @Session["NomeProjeto"]})">
                        <p><img src="~/Content/Imagens/progresso.png" class="custom-nav-ico">&nbsp&nbspMeu progresso
                        </p>
                    </a>
                </li>
                <li id="navestatisticas">
                    <a href="@Url.Action("Estatisticas", "Jogo", new { nomeProjeto = @Session["NomeProjeto"]})">
                        <p>
                            <img src="~/Content/Imagens/estatistica.png" class="custom-nav-ico">&nbsp&nbspMinhas estatísticas
                        </p>
                    </a>
                </li>
                <li id="navemblemas">
                    <a href="@Url.Action("Emblemas", "Jogo")">
                        <p>
                            <img src="~/Content/Imagens/emblema.png" class="custom-nav-ico">&nbsp&nbspEmblemas do jogo
                        </p>
                    </a>
                </li>
                <li id="navpremios">
                    <a href="@Url.Action("Premios", "Jogo")">
                        <p>
                            <img src="~/Content/Imagens/premio.png" class="custom-nav-ico">&nbsp&nbspPrêmios do jogo
                        </p>
                    </a>
                </li>
                <li id="navsobre">
                    <a href="@Url.Action("Sobre", "Jogo")">
                        <p>
                            <img src="~/Content/Imagens/olho.png" class="custom-nav-ico">&nbsp&nbspSobre o jogo
                        </p>
                    </a>
                </li>
            </ul>

        </div>
    </div>


    
    <!-- Tela principal do lado do menu -->
    <div class="main-panel">

        <!-- Titulo -->
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle toggled">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar bar1"></span>
                        <span class="icon-bar bar2"></span>
                        <span class="icon-bar bar3"></span>
                    </button>

                    <a class="navbar-brand" href="#">@ViewBag.Title</a>

                </div>

            </div>
        </nav>


        <!-- Corpo das páginas -->
        <div class="content">
            <div class="container-fluid">

                @RenderBody()

            </div>
        </div>


        <!-- Footer -->
        <footer class="footer">
            
            <div class="container-fluid">
                <br />
                © 2017, criado por <i class="fa fa-heart heart"></i><a href="https://github.com/joelnetodev">Joel Neto</a> 
                <br> Contato: joelnetodev@gmail.com
                <br/>
                <br />
            </div>
        </footer>

    </div>

</div>


<!--Menu Barra Lateral direita collapsed -->
<div class="collapse navbar-collapse off-canvas-sidebar" data-background-color="white" data-active-color="danger">
    <div class="sidebar-wrapper">
        <div class="logo">
            <img style="width: 40px; height: 35px; margin-top: -7px; float: left" src="~/Content/Imagens/logo.png" alt="Logo">
            TFS-Gamified
        </div>
        <ul class="nav nav-bar">
            <li>
                <a href="@Url.Action("Projeto", "Jogo")">

                    @if (Session["NomeProjeto"] == null)
                    { 
                        <p><img src="~/Content/Imagens/engrenagem.png" class="custom-nav-ico">&nbsp&nbspProjeto</p>
                    }
                    else
                    {
                        <p><img src="~/Content/Imagens/engrenagem.png" class="custom-nav-ico">&nbsp&nbsp @Session["NomeProjeto"]</p>
                    }
                    
                </a>
            </li>
            <li>
                <a href="@Url.Action("Progresso", "Jogo", new { nomeProjeto = @Session["NomeProjeto"]})">
                    <p>
                        <img src="~/Content/Imagens/progresso.png" class="custom-nav-ico">&nbsp&nbspMeu progresso
                    </p>
                </a>
            </li>
            <li>
                <a href="@Url.Action("Estatisticas", "Jogo",  new { nomeProjeto = @Session["NomeProjeto"]})">
                    <p>
                        <img src="~/Content/Imagens/estatistica.png" class="custom-nav-ico">&nbsp&nbspMinhas estatísticas
                    </p>
                </a>
            </li>
            <li>
                <a href="@Url.Action("Emblemas", "Jogo")">
                    <p>
                        <img src="~/Content/Imagens/emblema.png" class="custom-nav-ico">&nbsp&nbspEmblemas do jogo
                    </p>
                </a>
            </li>
            <li>
                <a href="@Url.Action("Premios", "Jogo")">
                    <p>
                        <img src="~/Content/Imagens/premio.png" class="custom-nav-ico">&nbsp&nbspPrêmios do jogo
                    </p>
                </a>
            </li>
            <li>
                <a href="@Url.Action("Sobre", "Jogo")">
                    <p>
                        <img src="~/Content/Imagens/olho.png" class="custom-nav-ico">&nbsp&nbspSobre o jogo
                    </p>
                </a>
            </li>
        </ul>
    </div>
</div>


</body>
</html>
